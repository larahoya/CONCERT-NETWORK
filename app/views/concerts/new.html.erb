<h2>Create a new concert</h2>

<%= flash_message %>

<% if @errors %>
<ul>
  <% @errors.each do |error| %>
    <li><%= error %></li>
  <% end %>
</ul>
<% end %>
<br>

<%= form_for [@concert] do |f| %>

<%= f.label :band %>
<%= f.text_field :band %>
<br>
<%= f.label :venue %>
<%= f.text_field :venue %>
<br>
<%= f.label :city %>
<%= f.text_field :city %>
<br>
<%= f.label :date %>
<%= f.date_field :date %>
<br>
<%= f.label :price %>
<%= f.text_field :price %>
<br>
<%= f.label :description %>
<%= f.text_field :description %>
<br>
<%= f.submit :save %>

<% end %>

<%= link_to('Cancel', concerts_path) %>